<Window x:Class="GroundTerminalApp.GroundTerminalDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ground Terminal Dashboard"
        Height="485"
        Width="810"
        FontFamily="Manrope"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <DockPanel Background="#F0F4F8">

        <!-- Custom Title Bar -->
        <Border Background="#2D89EF" Height="40" DockPanel.Dock="Top" MouseLeftButtonDown="GroundTerminalDashboardTitleBar">
            <DockPanel LastChildFill="True">

                <!-- App Title -->
                <TextBlock Text="Ground Terminal Dashboard"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           DockPanel.Dock="Left" />

                <!-- Minimize and Exit Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Margin="0,0,10,0">
                    <Button Content="—"
                            Width="30"
                            Height="30"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            Click="MinimizeApp_Click"
                            ToolTip="Minimize" />
                    <Button Content="×"
                            Width="30"
                            Height="30"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            Click="ExitApp_Click"
                            ToolTip="Exit" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Grid Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Telemetry Data -->
            <GroupBox Header="Telemetry Data" Grid.Row="0" Grid.Column="0" Margin="10" FontWeight="Bold">
                <StackPanel Margin="10">
                    <TextBlock Text="Data" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <RadioButton Content="AC-130" GroupName="AircraftGroup" FontSize="13" Margin="0,5"/>
                    <RadioButton Content="AC-747" GroupName="AircraftGroup" FontSize="13" Margin="0,5"/>
                    <RadioButton Content="WS-473" GroupName="AircraftGroup" FontSize="13" Margin="0,5"/>
                </StackPanel>
            </GroupBox>

            <!-- Right Panel: KPIs -->
            <GroupBox Header="KPIs" Grid.Row="0" Grid.Column="1" Margin="10" FontWeight="Bold">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- KPI Chart 1 -->
                    <Border Grid.Column="0"  Background="#F0F4F8" CornerRadius="10" Margin="10" BorderBrush="#CCC" BorderThickness="1">
                        <Grid>
                            <Ellipse Width="90" Height="90" Fill="#E0E0E0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse Width="50" Height="50" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="KPI 1" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- KPI Chart 2 -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10" BorderBrush="#CCC" BorderThickness="1">
                        <Grid>
                            <Ellipse Width="90" Height="90" Fill="#E0E0E0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Ellipse Width="50" Height="50" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="KPI 2" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>

            <!--  this the bottom panal is for the connection button -->
            <Border Grid.ColumnSpan="2"
                    Background="#F0F4F8"
                    Padding="10"
                    BorderBrush="#2D3E50"
                    BorderThickness="1"
                    Margin="0,375,0,0"
                    Grid.RowSpan="2">

                <Button x:Name="DashBrdConnectionBtn"
                        Content="Connect"
                        Background="#2D89EF"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Width="120"
                        Height="35"
                        Click="BinReplaceButton_Click" Margin="79,4,0,0"/>
            </Border>


        </Grid>
    </DockPanel>
</Window>
