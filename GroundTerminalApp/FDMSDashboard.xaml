<Window x:Class="GroundTerminalApp.FDMSDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FDMS Dashboard" Height="750" Width="1200"
        Background="#1E1E2F" FontFamily="Arial" FontSize="20">

    <Canvas Margin="0,55,20,20">

        <!-- This stackpanal is for the sidebar navigation we will let the window to be changed when user clicks it
             also We can use it as a navigation to our other window forms -->
        <StackPanel Background="#333333" Canvas.Left="10" Canvas.Top="0">
            <TextBlock Text="FDMS"
                       HorizontalAlignment="Center"
                       FontSize="34"
                       FontWeight="Bold"
                       Background="#333333"
                       Foreground="White"
                       Width="290"
                       Height="76" />

            <!-- this are buttons where we can navigates to other windows -->
            <Button x:Name="BtnSearchAndQuery" 
					Content="Search &amp; Query"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#333333"
                    Foreground="White"
                    Width="290"
                    Height="76" Click="BtnSearchAndQuery_Click" />

            <Button x:Name="BtnSystemLogs" 
					Content="System Logs"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#333333"
                    Foreground="White"
                    Width="290"
                    Height="76" Click="BtnSystemLogs_Click" />

            <Button Content="User"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#333333"
                    Foreground="White"
                    Width="290"
                    Height="76" />

            <Button Content="Settings"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#333333"
                    Foreground="White"
                    Width="290"
                    Height="76" />
        </StackPanel>

        <!-- I put this for the header part like to display titles and so -->
        <Label Content="Dashboard"
               Foreground="White"
               FontSize="56"
               FontWeight="Bold"
               Canvas.Left="320"
               Canvas.Top="10" />

        <!-- Main Content -->
        <!-- here it will be better if we display the visual display of the charts -->
        <StackPanel Orientation="Horizontal" Canvas.Left="320" Canvas.Top="100">
            <Border Background="#333" Width="250" Height="151" Margin="10">
                <Label Content="Speed " Foreground="White" Margin="10,10,100,106" />
                <!-- so if we display line chart here is nice -->
            </Border>

            <Border Background="#333" Width="250" Height="154" Margin="10">
                <Label Content="Speed " Foreground="White" Margin="10,10,100,106" />
                <!-- Chart control here -->
            </Border>

            <Border Background="#333" Width="250" Height="154" Margin="10">
                <Label Content="Speed " Foreground="White" Margin="10,10,100,106" />
                <!-- Chart control here -->
            </Border>
        </StackPanel>

        <!-- a stack panal for displaying the packet counter display -->
        <StackPanel Orientation="Horizontal" Canvas.Left="320" Canvas.Top="320" />

        <!-- Footer -->
        <StackPanel Canvas.Left="320" Canvas.Top="500">
            <!-- Border for Packet Counter section -->
            <Border Background="#333" Height="129" Width="485">
                <StackPanel Margin="10">
                    <Label Content="Packet Counter"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold" />
                    <Label Content="Received" Foreground="White" Margin="5,0" />
                    <Label Content="Sent" Foreground="White" Margin="5,0" />
                </StackPanel>
            </Border>
        </StackPanel>

        <Label x:Name="connectionStatusLbl"
               Content="Connection Status"
               Background="Green"
               Foreground="White"
               FontSize="20"
               FontWeight="Bold"
               Canvas.Left="915"
               Canvas.Top="524" />

        <CheckBox x:Name="connStatChkBx"
                  Content="Remote Database"
                  Foreground="White"
                  FontSize="20"
                  Canvas.Left="920"
                  Canvas.Top="589"
                  Height="40"
                  Width="240" />

        <StackPanel Orientation="Horizontal"
                    Canvas.Left="320"
                    Canvas.Top="294"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">

            <Border Background="#333" Width="250" Height="151" Margin="10">
                <Label Content="Speed " Foreground="White" Margin="10,10,100,106" />
                <!-- so if we display line chart here is nice -->
            </Border>

            <Border Background="#333" Width="250" Height="154" Margin="10">
                <Label Content="Speed " Foreground="White" Margin="10,10,100,106" />
                <!-- Chart control here -->
            </Border>

            <Border Background="#333" Width="250" Height="154" Margin="10">
                <Label Content="Speed " Foreground="White" Margin="10,10,100,106" />
                <!-- Chart control here -->
            </Border>

        </StackPanel>

    </Canvas>
</Window>
