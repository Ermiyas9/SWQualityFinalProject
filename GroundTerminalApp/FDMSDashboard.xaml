<Window x:Class="GroundTerminalApp.FDMSDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FDMS Dashboard" Height="750" Width="1200"
        Background="#1E1E2F" FontFamily="Arial" FontSize="20">

    <Canvas Margin="0,55,20,20">

        <!-- This stackpanal is for the sidebar navigation we will let the window to be changed when user clicks it
             also We can use it as a navigation to our other window forms -->
        <StackPanel Background="#333333" Canvas.Left="10" Canvas.Top="0">
            <TextBlock Text="FDMS"
                       HorizontalAlignment="Center"
                       FontSize="34"
                       FontWeight="Bold"
                       Background="#333333"
                       Foreground="White"
                       Width="290"
                       Height="76" />

            <!-- this are buttons where we can navigates to other windows -->
            <Button x:Name="BtnSearchAndQuery" 
                    Content="Search &amp; Query"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#333333"
                    Foreground="White"
                    Width="290"
                    Height="76"
                    Click="BtnSearchAndQuery_Click" />

            <Button x:Name="BtnSystemLogs" 
                    Content="System Logs"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#333333"
                    Foreground="White"
                    Width="290"
                    Height="76"
                    Click="BtnSystemLogs_Click" />

            <Button Content="User"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#333333"
                    Foreground="White"
                    Width="290"
                    Height="76" />

            <Button Content="Settings"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    FontSize="20"
                    FontWeight="Bold"
                    Background="#333333"
                    Foreground="White"
                    Width="290"
                    Height="76" />
        </StackPanel>

        <!-- I put this for the header part like to display titles and so -->
        <Label Content="Dashboard"
               Foreground="White"
               FontSize="56"
               FontWeight="Bold"
               Canvas.Left="320"
               Canvas.Top="10" />

        <!-- Main Content -->
        <!-- here it will be better if we display the visual display of the charts -->
        <StackPanel Orientation="Horizontal" Canvas.Left="320" Canvas.Top="100">
            <Border Background="#333" Width="250" Height="151" Margin="10">
                <StackPanel>
                    <Label Content="Altitude" Foreground="White" Margin="10,10,100,0" />
                    <Label x:Name="LblAltitudeValue" Content="Altitude: N/A" Foreground="White" Margin="10,0,10,0" />
                    <!-- so if we display line chart here is nice -->
                </StackPanel>
            </Border>

            <Border Background="#333" Width="250" Height="154" Margin="10">
                <StackPanel>
                    <Label Content="Attitude" Foreground="White" Margin="10,10,10,0" />
                    <Label x:Name="LblPitchValue" Content="Pitch: N/A" Foreground="White" Margin="10,0,10,0" />
                    <Label x:Name="LblBankValue" Content="Bank: N/A" Foreground="White" Margin="10,0,10,0" />
                    <!-- Chart control here -->
                </StackPanel>
            </Border>

            <Border Background="#333" Width="250" Height="154" Margin="10">
                <StackPanel>
                    <Label Content="Acceleration" Foreground="White" Margin="10,10,10,0" />
                    <Label x:Name="LblAccelXValue" Content="Accel X: N/A" Foreground="White" Margin="10,0,10,0" />
                    <Label x:Name="LblAccelYValue" Content="Accel Y: N/A" Foreground="White" Margin="10,0,10,0" />
                    <Label x:Name="LblAccelZValue" Content="Accel Z: N/A" Foreground="White" Margin="10,0,10,0" />
                    <!-- Chart control here -->
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- a stack panal for displaying the packet counter display -->
        <StackPanel Orientation="Horizontal" Canvas.Left="320" Canvas.Top="320" />

        <StackPanel Canvas.Left="350" Canvas.Top="350">
            <!-- in the footer i added a package container that is to show a package what we recieved and 
                 sent also i am thinking to implement if we did recieved the healthu package or not -->
            <!-- the next oone is the border for Packet Counter section -->
            <Border Background="#222" BorderBrush="White" BorderThickness="1" Height="229" Width="250">
                <Border.Clip>
                    <RectangleGeometry RadiusX="8" RadiusY="8" Rect="0,0,250,229"/>
                </Border.Clip>
                <StackPanel Margin="15">
                    <!-- Section Title -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Image Source="https://img.icons8.com/arcade/64/counter.png"
                               Width="50"
                               Height="50"
                               Margin="10"/>
                        <TextBlock Text="Packet Counter"
                                   Foreground="LightSkyBlue"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Received -->
                    <Label x:Name="PcktRecievedLbl"
                           Content="Received: 0"
                           Foreground="LightGreen"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="5,2" />

                    <!-- Sent -->
                    <Label x:Name="LblSent"
                           Content="Sent: 0"
                           Foreground="LightBlue"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="5,2" />

                    <!-- Dropped -->
                    <Label x:Name="LblDropped"
                           Content="Dropped: 0"
                           Foreground="Orange"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="5,2" />

                    <!-- Packet Health -->
                    <Label x:Name="packageHealthLbl"
                           Content="Packet Health: Unknown"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="5,2" />
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- this is a connection status block and it is  toggleable symbol like when its online it shows  
             the online green mark when offline will show offline from icons8 webstie  -->
        <Grid Canvas.Left="30" Canvas.Top="509" Width="245" Height="142">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <!-- Heading row -->
                <RowDefinition Height="*" />
                <!-- Symbol + status row -->
            </Grid.RowDefinitions>

            <!-- Symbol + status text -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="0,10,0,0">
                <Image x:Name="onlineIcon"
                       Source="https://img.icons8.com/emoji/48/check-mark-button-emoji.png"
                       Width="48"
                       Height="48"
                       Visibility="Collapsed"/>

                <Image x:Name="offlineIcon"
                       Source="https://img.icons8.com/3d-fluency/94/wi-fi-disconnected.png"
                       Width="48"
                       Height="48"
                       Visibility="Visible"/>

                <Label x:Name="connectionStatusLbl"
                       Content="OFFLINE"
                       FontSize="18"
                       Foreground="Red"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

    </Canvas>
</Window>
